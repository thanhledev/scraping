<Window x:Class="Scraping.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashScreen" Height="150" Width="400" WindowStartupLocation="CenterScreen" WindowStyle="None" 
        BorderBrush="#be2f2f" BorderThickness="3" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Label Height="60" Foreground="#be2f2f" HorizontalContentAlignment="Center" FontSize="40" FontWeight="ExtraBold">Web Scraper</Label>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="0">
            <Label FontSize="12" Height="30" FontStyle="Italic" Foreground="#be2f2f" Margin="10,0,0,0">Loading components...</Label>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="1">
            <Label HorizontalContentAlignment="Right" FontSize="12" Height="30" Foreground="#be2f2f" Margin="0,0,10,0">1.0.0.0</Label>
        </DockPanel>
    </Grid>
</Window>
